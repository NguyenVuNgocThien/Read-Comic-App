<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Statistical">

<!--    <ScrollView-->
<!--        android:id="@+id/scrollstatistical"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="vertical">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/images"
            android:orientation="vertical">


            <!--    <ImageView-->
            <!--        android:id="@+id/logohomefromsatistical"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="80dp"-->
            <!--        android:src="@drawable/logo"-->
            <!--        />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgAnhdaidien"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/images" />

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="abcdawsasda"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/txtMail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="abcdawsasda"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/txtfblink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="abcdawsasda"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgeditname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_edit_24" />

                        <ImageView
                            android:id="@+id/imgeditmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_edit_24" />

                        <ImageView
                            android:id="@+id/imgeditfblink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_baseline_edit_24" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to up your comic"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imgupcomic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_file_upload_24"
                android:text="Upload Yout Comic"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/ThongKe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Thống kê cá nhân"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtThunhap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#A69797"
                    android:text="Thu Nhập:"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtSLTruyen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#A69797"
                    android:drawableLeft="@drawable/ic_baseline_book_24"
                    android:text="Số Truyện:"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/txtSLChap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#A69797"
                    android:drawableLeft="@drawable/ic_baseline_chaps_24"
                    android:text="Số chapter:"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/txtSLBinhLuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#A69797"
                    android:drawableLeft="@drawable/ic_baseline_comment_24"
                    android:text="Bình luận:"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/txtSLTheodoi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#A69797"
                    android:drawableLeft="@drawable/ic_baseline_follows_24"
                    android:text="Theo dõi:"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ChiTiet"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/back"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Chi tiết thu nhập"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/txtMoneyFromComic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="Truyện Đã Up        x500 "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtMoneyFromChap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:text="Chap Đã Up           x200 "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtTotalIncom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:text="Tổng tiền "
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Truyện Chờ duyệt:"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/ChiTiet" />

                <ListView
                    android:id="@+id/list_waitforaccess"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <View
                    android:id="@+id/bottomLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"></View>
                <!--<Button-->
                <!--    android:layout_width="match_parent"-->
                <!--    android:layout_height="wrap_content"-->
                <!--    -->
                <!--    />-->
                <ImageView
                    android:layout_marginBottom="150dp"
                    android:id="@+id/imglogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_logout_24" />

            </LinearLayout>
        </LinearLayout>
<!--    </ScrollView>-->
</ScrollView>